<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
  <class
    name="FSNEP.Core.Domain.ExpenseSheet, FSNEP.Core"
    table="ExpenseSheets" >
    <id name="ID" access="nosetter.lowercase" column="ID">
      <generator class="identity" />
    </id>

    <property name="Month" column="Month" />
    <property name="Year" column="Year" />
    <property name="ReviewComment" column="ReviewComment" />

    <many-to-one name="AssociatedUser" column="UserId" class="FSNEP.Core.Domain.User, FSNEP.Core"></many-to-one>

    <many-to-one name="Status" column="StatusID" class="FSNEP.Core.Domain.Status, FSNEP.Core"></many-to-one>

    <bag name="Entries" table="ExpenseSheetEntries" inverse="true" cascade="all-delete-orphan">
      <key column="ExpenseSheetID" />
      <one-to-many class="FSNEP.Core.Domain.ExpenseSheetEntry, FSNEP.Core" />
    </bag>
    
  </class>
</hibernate-mapping>